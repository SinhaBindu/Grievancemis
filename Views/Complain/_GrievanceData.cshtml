@model DataTable
@using System.Data

<div class="table-box">
    <div class="table-responsive">
        @*<h2>Grievances List</h2>*@
        <table class="table table-bordered table-hover dt-responsive display tbl" id="tbl" width="100%">
            <thead>
                <tr>
                    <th>Case Id</th>
                    <th>Complain<br />Date</th>
                    <th width="100px">Email</th>
                    <th>Name</th>
                    <th>Grievance Type</th>
                    @*<th>State</th>
                    <th>Location</th>*@
                    <th>Duration</th>
                    <th>Title</th>
                    <th>Message</th>
                    <th>Status</th>
                    <th>Action</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr style="background-color:@row["RevertStatusBgColor"]">
                        <td>@row["CaseId"]</td>
                        <td>@row["CreatedOn"]</td>
                        <td><div style="word-wrap: break-word; width: 90px">@row["Email"]</div></td>
                        <td>@row["Name"]</td>

                        <td>@row["GrievanceType"]</td>
                        @*<td>@row["StateName"]</td>
                        <td>@row["Location"]</td>*@
                        <td>@row["DateDiff"]</td>
                        <td><div style="word-wrap: break-word; width: 100px">@row["Title"]</div></td>
                        <td>
                            <div style="word-wrap: break-word; width: 150px">
                                @if (row["Grievance_Message"].ToString().Length <= 100)
                                {
                                    <span class="txtshow">@row["Grievance_Message"].ToString()</span>
                                }
                                else
                                {
                                    <span class="txtshow">@row["Grievance_Message"].ToString().Substring(0, 100)...</span>
                                }
                                @*<span class="txthide">@row["Grievance_Message"]</span>*@
                            </div>
                            @*<button class="read-more">Read more</button>*@
                        </td>

                        <td>@row["RevertTypeText"]</td>
                        @if (row["RevertType_Id"].ToString() == "1" || string.IsNullOrWhiteSpace(row["RevertType_Id"].ToString()))
                        {
                            <td>
                                <button class="btn btn-warning btn-sm progress-button" data-id="@row["Id"]" onclick="POPDisplay('@row["Id"]','@row["CaseId"]','@row["Name"]','@row["CreatedOn"]','@row["MaxRevertID"]')"> Revert Process</button>
                            </td>
                        }
                        else
                        {
                            <td></td>
                        }
                        @if (!string.IsNullOrWhiteSpace(row["RevertType_Id"].ToString()))
                        {
                            <td>
                                <a href="~/Complain/RevartList?GId=@row["Id"].ToString()" class="btn btn-primary btn-sm progress-button"><i class="fa fa-street-view"></i></a>
                            </td>
                        }
                        else
                        {
                            <td></td>
                        }

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Script{

}