@model Grievancemis.Models.Feedback
@{
    ViewBag.Title = "Feedback List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h2 class="mb-0">@ViewBag.Title</h2>
            <ul class="breadcrumb">
                <!-- Optional breadcrumb links -->
            </ul>
        </div>
    </div>
</div>

<div class="grievances-list">
    <div class="box-design">
        @using (Html.BeginForm("GetFeedbackList", "Feedback", FormMethod.Post,new { id = "formid", @class = "form-inline", role = "form", autocomplete = "off", enctype = "multipart/form-data" }))
        {
            <!-- Add form inputs if required -->
            <button type="submit" class="btn btn-primary">Submit</button>
        }

        <!-- Placeholder for feedback data -->
        <div id="feedback-content" class="mt-4">
            <!-- Feedback data will be loaded here -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            loadFeedbackData();

            function loadFeedbackData() {
                $.ajax({
                    url: '/Feedback/GetFeedbackList',
                    type: 'GET',
                    success: function (response) {
                        if (response.IsSuccess) {
                            $('#feedback-content').html(response.Data);
                        } else {
                            alert(response.Data || "No data found.");
                        }
                    },
                    error: function () {
                        alert('Error loading feedback data.');
                    }
                });
            }
        });
    </script>
}
