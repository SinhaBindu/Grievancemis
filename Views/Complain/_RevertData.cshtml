@model DataTable
@using System.Data

<div class="grievances-list">
    @*<h2>Revert Complain List</h2>*@
    <table class="table table-bordered table-hover dt-responsive display tbl" id="tbl" width="100%">
        <thead>
            <tr>
                <th>Serial No</th> <!-- Added Serial No column -->
                <th>Case Id</th>
                <th>Complain<br /> Date</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Status</th>
                <th>Query Date</th>
                <th>Query Message</th>
                <th>Query <br />Reported By</th>
                <th>User Revert<br /> Date</th>
                <th>User Revert<br /> Message</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Rows.Count > 0)
                {
                    int serialNo = 1; // Initialize the serial number
                    foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@serialNo</td> <!-- Display the serial number -->
                            <td>@row["CaseId"]</td>
                            <td><strong class="badge bg-warning-500/10 fnsz"> @row["ComDate"]</strong></td>
                            <td style="word-wrap:break-word;">@row["Name"]</td>
                            <td>@row["Gender"]</td>
                            <td style="background:@row["RevertStatusBgColor"]"><strong>@row["RevertStatus"]</strong></td>
                            <td><strong class="badge bg-warning-500/10 fnsz">@row["RevartDate"]</strong></td>
                            <td>@row["TeamRevertMessage"]</td>
                            <td>@row["TeamReportedByName"]</td>
                            <td><strong class="badge bg-warning-500/10 fnsz">@row["UserRevartDate"]</strong></td>
                            <td>@row["UserRevertMessage"]</td>
                        </tr>
                        serialNo++; // Increment the serial number
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="text-danger">Record is not found </td>
                    </tr>
                }

            }


        </tbody>
    </table>
</div>
