    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".menu-btn").click(function () {
                $(".menu-btn").toggleClass("open");
                $(".nav").toggleClass("show");
            });
            $('#GrievanceType').change(function () {
                var selectedValue = $(this).val();
                $('#Other').val('');
                if (selectedValue == '12') { // Assuming the value for "Other" is 12
                    $('#dv_Other').show(); // Show the Other textbox
                } else {
                    $('#dv_Other').hide(); // Hide the Other textbox
                    // Clear the Other textbox
                }
            });
            $('#PhoneNo').on('input', function () {
                // Remove any non-numeric characters
                this.value = this.value.replace(/[^0-9]/g, '');

                // Check if the length is greater than 10
                if (this.value.length > 10) {
                    this.value = this.value.slice(0, 10); // Limit to 10 digits
                }
            });


            $('#formid').submit(function (e) {
                if ($('#Email').val() == '' || $('#Email').val() == null) {
                    toastr.error('Enter the EmailID.');
                    return false;
                }
                //if ($('#PhoneNo').val().length !== 10) {
                //    toastr.error('Phone number must be exactly 10 digits.');
                //    return false;
                //}

                //if ($('#Name').val() == '') {
                //    toastr.error('Enter the Name.');
                //    return false;
                //}
                //if ($('#PhoneNo').val() == '') {
                //    toastr.error('Enter the PhoneNo.');
                //    return false;
                //}
                if ($('#GrievanceType').val() == null || $('#GrievanceType').val() == '' || $('#GrievanceType').val() == '0') {
                    toastr.error('Enter the Grievance Type.');
                    return false;
                }
                if ($('#StateId').val() == null || $('#StateId').val() == '' || $('#StateId').val() == '0') {
                    toastr.error('Enter the State.');
                    return false;
                }
                if (($('#Other').val() == '' || $('#Other').val() == null) && $('#GrievanceType').val() == '12') {
                    toastr.error('Enter the Other.');
                    return false;
                }
                if ($('#GrievanceMessage').val() == '') {
                    toastr.error('Enter the Message.');
                    return false;
                }
                if ($('#Gender').val() == '') {
                    toastr.error('Enter the Gender.');
                    return false;
                }
                if ($("#IsConsentCheckbox").is(':checked')) {
                    // Code in the case checkbox is checked.
                } else {
                    // Code in the case checkbox is NOT checked.
                    toastr.error('Check the All information given is accurate to the best of my knowledge.');
                    return false;
                }

                e.preventDefault();
                if (confirm("Are you sure you want to Complain Register this?")) {
                    var formData = new FormData(this);
                    $.ajax({
                        type: "POST",
                        url: "/Grievnce/GrievanceCaseAdd",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                                //if (resp.resdata == 99 || resp.resdata == 100 || resp.resdata == 101) {
                                //    window.location.href = resp.redirect;//document.baseURI +
                                //}
                                window.location.href = document.baseURI + "/Account/LoginTeamUser?EmailId=" + $('#Email').val();

                                //commnet yest16dec
                                //$('#formid')[0].reset();
                                //$('#div-evc').show();
                                //$('#div-vc').hide();
                                //$('#div-g').hide();
                                //$('#div-emailid').show();
                                //$('#Email_Id').val('');
                                //$('#Email_Id').removeAttr('readonly');
                                //$('#OptCode').val('');
                            }
                            else {
                                toastr.error(data.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            toastr.error("Error: " + xhr.status + " - " + error);
                        }
                    });
                }
                else {
                    return false;
                }
            });

        });
        function EamilMailSendOTPPost() {
            document.getElementById('btnverify').disabled = true;
            $('#btnreset').hide();
            $('#div-vc').hide();
            $('#OptCode').val('');
            if ($('#Email_Id').val() == null || $('#Email_Id').val() == '') {
                toastr.error('Email Id not empty');
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "/Grievnce/OTPSendEmailMail",
                    data: { 'EmailId': $('#Email_Id').val() },
                    success: function (resp) {
                        if (resp.success) {
                            toastr.success(resp.message);
                            document.getElementById('btnverify').disabled = false;
                            $('#btnsentotp').hide();
                            $('#div-vc').show();
                            $('#OptCode').val('');
                            setInterval(function () {
                                $('#btnreset').show();
                            }, 60000);//1 mint//60000 milisecond

                        }
                        else {
                            toastr.error(resp.message);
                            return false;
                        }
                    },
                    error: function (xhr, status, error) {
                        toastr.error("Error: " + xhr.status + " - " + error);
                        return false;
                    }
                });
            }
        }
        function ResendOTPSendMail() {
            $('#btnreset').hide();
            $('#btnsentotp').hide();
            //$('#div-vc').hide();
            $('#OptCode').val('');
            if ($('#Email_Id').val() == null || $('#Email_Id').val() == '') {
                toastr.error('Email Id not empty');
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "/Grievnce/ResendOTPSendMail",
                    data: { 'EmailId': $('#Email_Id').val() },
                    success: function (resp) {
                        if (resp.success) {
                            debugger;
                            toastr.success(resp.message);
                            setInterval(function () {
                                $('#btnreset').show();
                            }, 60000);//1 mint//60000 milisecond
                        }
                        else {
                            toastr.error(resp.message);
                            return false;
                        }
                    },
                    error: function (xhr, status, error) {
                        toastr.error("Error: " + xhr.status + " - " + error);
                        return false;
                    }
                });
            }
        }
        function VerifyOTPEamilMailSendPost() {
            debugger;
            $('#btnreset').hide();

            if ($('#Email_Id').val() == null || $('#Email_Id').val() == '') {
                toastr.error('Enter the EmailID.');
                return false;
            }
            if ($('#OptCode').val() == null || $('#OptCode').val() == '') {
                toastr.error('Enter the OptCode.');
                return false;
            }
            $('#div-g').hide();
            var optc = $('#OptCode').val();
            $.ajax({
                type: "POST",
                url: "/Grievnce/OTPVerifyEmailMail",
                //url: "/Account/Login_Grievance",
                data: { 'EmailId': $('#Email_Id').val(), 'OPTCode': $('#OptCode').val() },
                success: function (resp) {
                    $('#OptCode').val('');
                    if (resp.success) {
                        document.getElementById('btnverify').disabled = false;
                        if (resp.resdata == 1) {
                            $('#Email_Id').attr('readonly', true);
                            $('#div-vc').show();
                        }
                        if (resp.resdata == 2) {
                            $('#div-g').show();
                            $('#Email_Id').attr('readonly', true);
                            $('#Email').attr('readonly', true);
                            $('#Email').val($('#Email_Id').val());
                            $('#div-emailid').hide();
                            $('#Email_Id').val('');
                            $('#div-evc').hide();
                        }
                        if (resp.resdata == 99 || resp.resdata == 100 || resp.resdata == 101) {
                            // window.location.href = resp.redirect;//document.baseURI +
                            window.location.href = document.baseURI + "/Account/LoginTeamUser?EmailId=" + $('#Email').val();

                        }
                        toastr.success(resp.message);
                    }
                    else {
                        toastr.error(resp.message);
                        return false;
                    }
                },
                error: function (xhr, status, error) {
                    toastr.error("Error: " + xhr.status + " - " + error);
                    return false;
                }
            });
        }
    </script>
