@using Grievancemis.Manager
@model Grievancemis.Models.GrivanceModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grievances-list">
    <h2>Grievances List</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.StateName, htmlAttributes: new { @class = "control-label" })
                <span style="color:red;">*</span>
                @Html.DropDownListFor(model => model.StateName, CommonModel.GetState(), null, new { @class = "form-control", @id = "state-filter", @required = "required" })
                @Html.ValidationMessageFor(model => model.StateName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.GrievanceType, htmlAttributes: new { @class = "control-label" })
                <span style="color:red;">*</span>
                @Html.DropDownListFor(model => model.GrievanceType, CommonModel.GetGrievanceType(), null, new { @class = "form-control", @id = "type-filter", @required = "required" })
                @Html.ValidationMessageFor(model => model.GrievanceType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            <button id="search-button" class="btn btn-primary">Search</button>
        </div>
    </div>
</div>
<div id="subdata"></div>
<div class="modal fade" id="progressModal" tabindex="-1" role="dialog" aria-labelledby="progressModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="progressModalLabel">Grievance Progress</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="modal-message">Loading progress details...</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="confirm-progress">Confirm Progress</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#search-button').on('click', function (e) {
                e.preventDefault();
                var stateFilter = $('#state-filter').val();
                var typeFilter = $('#type-filter').val();

                $.ajax({
                    type: "POST",
                    url: "/Grievnce/GetGrievanceList",
                    data: { 'stateFilter': stateFilter, 'typeFilter': typeFilter },
                    success: function (data) {
                        $('#subdata').html(data);
                    },
                    error: function (xhr, status, error) {
                        console.log("Error: " + xhr.responseText);
                    }
                });
            });
            // Handle progress button click
            $(document).on('click', '.progress-button', function () {
                $('#progressModal').modal('show');
            });
        });
    </script>
}