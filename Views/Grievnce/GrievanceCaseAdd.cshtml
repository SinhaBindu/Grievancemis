                                                    <span style="color:red;">*</span>
                                                    @Html.ValidationMessageFor(model => model.IsConsent, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Submit" class="btn-submit" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>                        
                        <div class="right-box" data-aos="fade-up" data-aos-duration="1500" data-aos-delay="100">
                            <img src="~/Content/assets/images/grivance-1.png" alt="grievance" />
                        </div>                        
                    </div>                    
                </div>
            </div>
